---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import DogProfile from '../../components/DogProfile';

const locale = 'en' as const;
---

<Layout
  locale={locale}
  title="Meet This Dog — CAPA Póvoa de Lanhoso"
  description="Meet this shelter dog from CAPA and consider giving them a loving home."
  ogUrl="https://capapvl.pt/en/dog"
>
  <Nav locale={locale} />
  <main class="px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    <DogProfile locale={locale} client:load />
  </main>
  <Footer locale={locale} />
</Layout>
