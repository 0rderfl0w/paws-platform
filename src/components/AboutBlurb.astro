---
import { getTranslations, type Locale } from '../i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'pt' } = Astro.props;
const t = getTranslations(locale);

const aboutPath = locale === 'pt' ? '/sobre-nos' : '/en/about';
const helpPath = locale === 'pt' ? '/ajudar' : '/en/help';
---

<section class="bg-warm-100 py-20" aria-labelledby="about-heading">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

      <!-- Text content -->
      <div>
        <span class="inline-block text-nature-600 text-sm font-semibold tracking-wider uppercase mb-3">{t.aboutBlurb.eyebrow}</span>
        <h2 id="about-heading" class="text-3xl sm:text-4xl font-bold text-warm-900 mb-6">
          {t.aboutBlurb.heading}
        </h2>
        <div class="space-y-4 text-warm-700 text-lg leading-relaxed">
          <p>{t.aboutBlurb.p1}</p>
          <p>{t.aboutBlurb.p2}</p>
        </div>
        <div class="mt-8 flex flex-wrap gap-4">
          <a
            href={aboutPath}
            class="inline-flex items-center gap-2 px-6 py-3 bg-nature-600 hover:bg-nature-700 text-white font-semibold rounded-xl shadow-sm transition-colors group"
          >
            {t.aboutBlurb.ctaPrimary}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 group-hover:translate-x-1 transition-transform" aria-hidden="true">
              <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
            </svg>
          </a>
          <a
            href={helpPath}
            class="inline-flex items-center gap-2 px-6 py-3 bg-transparent border-2 border-nature-600 text-nature-700 font-semibold rounded-xl hover:bg-nature-50 transition-colors"
          >
            {t.aboutBlurb.ctaSecondary}
          </a>
        </div>
      </div>

      <!-- Visual card cluster -->
      <div class="relative hidden lg:block">
        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-4">
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-warm-200">
              <div class="text-4xl font-extrabold text-primary-600 mb-1">{t.aboutBlurb.stat1Value}</div>
              <div class="text-warm-700 font-medium text-sm">{t.aboutBlurb.stat1Label}</div>
            </div>
            <div class="bg-primary-500 rounded-2xl p-6 shadow-sm text-white">
              <div class="text-4xl font-extrabold mb-1">{t.aboutBlurb.stat2Value}</div>
              <div class="text-primary-100 font-medium text-sm">{t.aboutBlurb.stat2Label}</div>
            </div>
          </div>
          <div class="space-y-4 mt-8">
            <div class="bg-nature-600 rounded-2xl p-6 shadow-sm text-white">
              <div class="text-4xl font-extrabold mb-1">{t.aboutBlurb.stat3Value}</div>
              <div class="text-nature-100 font-medium text-sm">{t.aboutBlurb.stat3Label}</div>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-warm-200">
              <div class="text-4xl font-extrabold text-warm-600 mb-1">{t.aboutBlurb.stat4Value}</div>
              <div class="text-warm-700 font-medium text-sm">{t.aboutBlurb.stat4Label}</div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
